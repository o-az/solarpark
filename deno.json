{
  "$schema": "https://raw.githubusercontent.com/denoland/deno/refs/heads/main/cli/schemas/config-file.v1.json",
  "tasks": {
    "check": "deno fmt && deno lint",
    "dev": "deno run --allow-all --watch serve.mts",
    "check:build": "deno task wasmbuild@0.19.2 --check",
    "build": "deno run --allow-all jsr:@deno/wasmbuild@0.19.2 --project='solarpark' --out='dist' --skip-opt"
  },
  "imports": {
    "@std/http": "jsr:@std/http@^1.0.23"
  },
  "deploy": {
    "org": "zk",
    "app": "solar"
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 100,
    "indentWidth": 2,
    "singleQuote": true,
    "semiColons": false,
    "quoteProps": "asNeeded",
    "include": [
      "**/*"
    ],
    "exclude": [
      "**/_/**",
      "dist/**/*",
      "**/target/**/*"
    ]
  },
  "lint": {
    "include": [
      "**/*"
    ],
    "exclude": [
      "dist/**/*",
      "**/target/**/*"
    ]
  },
  "compilerOptions": {
    "strict": true,
    "strictNullChecks": true
  }
}
